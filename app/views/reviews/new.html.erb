<h3><%= @restaurant.name %></h3>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.select :rating, Review::RATING, include_blank: false %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to list", restaurant_path(@restaurant) %>
